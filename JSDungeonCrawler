        <script>
            go.addEventListener('click', action);

            var audio = new Audio('assets\\Sound\\Main_Menu.mp3');
            audio.loop = true;
            audio.play();
            audio.onended = function(){
                                        audio.play();}

            function action()
            {
                let spritecolor = document.querySelector(".Sprite");
                var couleur = [0, 30, 60, 120, 240, 280, 330, 200, 170, 310];
                var randomcoul = couleur[Math.floor(Math.random() * couleur.length)];
                spritecolor.style.filter = "hue-rotate(" + randomcoul + "deg)";
                console.log('randomcoul',randomcoul);
            }
        </script>
